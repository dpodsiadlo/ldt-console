{
  "manifest_version": 2,
  "name": "LDT Console",
  "description": "Console for LDT",
  "version": "1.1",
  "minimum_chrome_version": "33.0.1715.0",
  "permissions": [
    "background"
  ],
  "icons": {
    "128": "icon.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js",
        "sockets.js"
      ]
    }
  },
  "sandbox": {
    "pages": [
      "dist/index.html"
    ]
  },
  "sockets": {
    "tcpServer": {
      "listen": "127.0.0.1:*"
    }
  }
}
